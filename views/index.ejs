<!-- views/index.html -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%-title%></title>
</head>
<body>
  <a href=""></a>
  <br />
  <hr>
  <div style="text-align: center;">
    <h1 style="margin: 0;">enigma machine</h1>
    <p style="margin: 0;">built with NestJS, ejs, htmx, and websockets</p>
  </div>
  <hr>

  <br />
  <br />
  <br />

  <!-- create machine -->
  <div style="border: 1px solid #000; padding: 1em;">
    <form hx-post="/broadcast" hx-target="#result" hx-swap="outerHTML" hx-trigger="submit">
      <p style="margin: 0;">channel:</p>
      <input type="text" name="channel" placeholder="bravo" required>
      <br />
      <br />
      <p style="margin: 0;">rotor settings:</p>
      <textarea name="rotors" placeholder="['F.12', 'A.1', 'C.33', 'Z.99']" required></textarea>
      <br />
      <br />
      <button type="submit">Submit</button>
    </form>
  </div>

  <br />
  <br />
  <br />

  <div id="result">Result will be displayed here</div>

  <!-- Include htmx -->
  <script src="https://unpkg.com/htmx.org@1.7.0/dist/htmx.js"></script>
</body>
</html>
